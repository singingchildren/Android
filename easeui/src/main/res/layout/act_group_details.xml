<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toTopOf="parent"
        hyphenate:titleBarTitle="群详情" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="群主"
        android:padding="15dp"
        android:textColor="@color/btn_white_normal"
        android:background="@color/btn_gray_pressed"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <ImageView
        android:id="@+id/iv_delete_seek_act"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toBottomOf="@+id/textView2"
        hyphenate:srcCompat="@drawable/icon_group" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        hyphenate:layout_constraintBottom_toBottomOf="@+id/iv_delete_seek_act"
        hyphenate:layout_constraintStart_toEndOf="@+id/iv_delete_seek_act"
        hyphenate:layout_constraintTop_toTopOf="@+id/iv_delete_seek_act" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="群成员"
        android:textColor="@color/btn_white_normal"
        android:background="@color/btn_gray_pressed"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toBottomOf="@+id/iv_delete_seek_act" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        hyphenate:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/groupname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="群昵称"
        android:textSize="@dimen/sp_16"
        android:padding="15dp"
        android:background="@drawable/rectangle"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toBottomOf="@+id/recycler" />

    <TextView
        android:id="@+id/gonggao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="群公告"
        android:textSize="@dimen/sp_16"
        android:padding="15dp"
        android:background="@drawable/rectangle"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent"
        hyphenate:layout_constraintTop_toBottomOf="@+id/groupname" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="退出"
        hyphenate:layout_constraintBottom_toBottomOf="parent"
        hyphenate:layout_constraintEnd_toEndOf="parent"
        hyphenate:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
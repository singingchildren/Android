<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_7"
    android:paddingRight="@dimen/dp_15"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_7"
    android:paddingBottom="@dimen/dp_7">

    <ImageView
        android:id="@+id/iv_home_information_itme"
        android:layout_width="118dp"
        android:layout_height="73dp"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_home_information_itme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="标题"
            android:ellipsize="end"
            android:ems="15"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv1_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读"
            android:textSize="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"/>

        <TextView
            android:id="@+id/tv_read_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv1_item_home"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv1_item_home"
            android:text="1.7万"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv2_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:text="收藏"
            android:textSize="@dimen/dp_12"
            android:layout_alignTop="@+id/tv_read_item_home"
            android:layout_toRightOf="@+id/tv_read_item_home"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_collect_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="0.3万"
            android:textSize="@dimen/dp_12"
            android:layout_alignTop="@+id/tv2_item_home"
            android:layout_toRightOf="@+id/tv2_item_home"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_bg">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_17">

        <ImageView
            android:id="@+id/iv_header_item_news"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:src="@drawable/my" />

        <TextView
            android:id="@+id/tv_author_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_header_item_news"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="福和生食疗馆"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_introduce_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/tv_author_item_news"
            android:layout_alignLeft="@+id/tv_author_item_news"
            android:text="北京海淀扶贫达人团成员 三农领域创作者"
            android:textColor="#66666666"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/tv_title_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_below="@id/iv_header_item_news"
            android:text="营养师对于每一位家庭成员来说的重要性！"/>

        <ImageView
            android:id="@+id/iv_image_item_news"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/tv_title_item_news"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/tv_comments_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="57评论"
            android:textSize="@dimen/dp_12"
            android:textColor="#ff666666"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_below="@+id/iv_image_item_news"/>
        <TextView
            android:id="@+id/tv_time_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分钟前"
            android:textSize="@dimen/dp_12"
            android:textColor="#ff666666"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_below="@+id/iv_image_item_news"
            android:layout_toRightOf="@+id/tv_comments_item_news"
            android:layout_alignTop="@+id/tv_comments_item_news"/>


    </RelativeLayout>
    <include layout="@layout/line" />
</LinearLayout>

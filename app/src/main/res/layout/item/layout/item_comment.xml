<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_255"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/my" />

    <TextView
        android:id="@+id/tv_auter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:text="科比布莱恩特"
        android:textColor="#32A90E"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="他的资产那么多怎么，不注意身体，累的 英年早逝，才 97岁 拷贝 2"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/helathy_pop_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_auter" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/reply"
        android:padding="@dimen/dp_10"
        android:text="回复"
        android:textColor="@color/helathy_pop_text"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/tv_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment" />

    <ImageView
        android:id="@+id/iv_zan"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reply"
        app:layout_constraintStart_toEndOf="@+id/tv_reply"
        app:layout_constraintTop_toTopOf="@+id/tv_reply"
        app:srcCompat="@drawable/zan" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="14"
        android:textColor="@color/helathy_pop_text"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_zan"
        app:layout_constraintStart_toEndOf="@+id/iv_zan"
        app:layout_constraintTop_toTopOf="@+id/iv_zan" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/text_bottom_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioButton
        android:id="@+id/scheme_food"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:text="膳食"
        android:checked="true"
        android:textColor="@color/home_textcloor"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/scheme_sleep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/scheme_sleep"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="睡眠"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/home_textcloor"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/scheme_stop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scheme_food"
        app:layout_constraintTop_toTopOf="@+id/scheme_food" />

    <RadioButton
        android:id="@+id/scheme_stop"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="运动"
        android:button="@null"
        android:textColor="@color/home_textcloor"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/scheme_love"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scheme_sleep"
        app:layout_constraintTop_toTopOf="@+id/scheme_sleep" />

    <RadioButton
        android:id="@+id/scheme_love"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="心理"
        android:button="@null"
        android:textColor="@color/home_textcloor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scheme_stop"
        app:layout_constraintTop_toTopOf="@+id/scheme_stop" />





    </RadioGroup>

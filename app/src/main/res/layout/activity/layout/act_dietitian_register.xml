<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.act.nutritionist.ActDietitianRegister">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#01C060">

        <ImageView
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fanghui2x" />

        <TextView
            android:id="@+id/more_detailstb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="营养师注册"
            android:textColor="@color/write"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/orange_rectangle2"
            android:text="提交"
            android:textColor="@color/white_255"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/more_detailstb" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="填写个人信息"
                    android:textColor="@color/helathy_pop_text"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <include layout="@layout/line" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入姓名"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColor="@color/helathy_pop_text"
                    android:textSize="@dimen/sp_16" />

                <include layout="@layout/line" />

                <include layout="@layout/line" />

                <EditText
                    android:id="@+id/et_idnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:digits="1234567890Xx"
                    android:inputType="textFilter"
                    android:hint="输入身份证号"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColorHint="@color/edit_color"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_code_dietitian_register_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入邀请码(选填)"
                    android:inputType="number"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColorHint="@color/edit_color"
                    android:textSize="@dimen/sp_14" />

                <include layout="@layout/line" />
                <EditText
                    android:id="@+id/et_studio_code_dietitian_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入邀工作室请码(选填)"
                    android:inputType="number"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColorHint="@color/edit_color"
                    android:textSize="@dimen/sp_14" />

                <include layout="@layout/line" />
                <EditText
                    android:id="@+id/et_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入所在地区"
                    android:inputType="text"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColorHint="@color/edit_color"
                    android:textSize="@dimen/sp_14" />

                <include layout="@layout/line" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入详细地址"
                    android:inputType="text"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:textColorHint="@color/edit_color"
                    android:textSize="@dimen/sp_14" />
                <include layout="@layout/line" />

                <include layout="@layout/line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="资历及简历上传(必填)"
                    android:textColor="@color/helathy_pop_text"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <include layout="@layout/line" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="健康证(选填)"
                    android:textColor="@color/helathy_pop_text"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <include layout="@layout/line" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_healty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="个人介绍"
                    android:textColor="@color/helathy_pop_text"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <include layout="@layout/line" />

                <EditText
                    android:id="@+id/et_introduction_nutritionist_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="start"
                    android:maxLength="500"
                    android:hint="可以填写不超过500字的个人介绍"
                    android:lines="5"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
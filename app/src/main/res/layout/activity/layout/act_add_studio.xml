<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.act.nutritionist.ActJoinStudio"
    android:background="#FFEEEEEE">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#01C060"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fanghui2x" />

        <TextView
            android:id="@+id/more_detailstb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="加入工作室"
            android:textColor="@color/write"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/ll_join_add_studio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_17"
        android:gravity="center">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_rectangle"
            android:hint="输入工作室邀请码"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_13"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text_grey"
            />

        <TextView
            android:id="@+id/commit"
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/commit2"
            android:text="提交"
            android:gravity="center"
            android:textColor="@color/commit_color"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_quit_add_studio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_17"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_name_add_studio_act"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="left|center"
            android:paddingLeft="@dimen/dp_15"
            android:background="@color/write"
            android:text="工作室名称"
            android:textSize="@dimen/dp_14"
            />
        <TextView
            android:id="@+id/tv_quit_add_studio"
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/commit2"
            android:text="退出该工作室"
            android:gravity="center"
            android:textColor="@color/commit_color"
            android:textSize="@dimen/sp_17"
           />
    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#01C060">

        <TextView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/home_healthimage"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:contentDescription="@null"
            android:src="@drawable/fanghui2x" />

        <TextView
            android:id="@+id/home_healthtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="个人文档"
            android:textColor="@color/write"
            android:textSize="@dimen/dp_18" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_member_user_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入姓名"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/sex"
            android:digits="男女"
            android:inputType="textFilter"
            android:maxLength="1"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/age"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/height"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入体重(kg)"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@drawable/commit2"
        android:text="@string/commit"
        android:textColor="@color/white_255" />

    <LinearLayout
        android:id="@+id/ll_dietician_user_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="姓名"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/sex"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/age"
            android:inputType="number"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/height"
            android:inputType="number"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入体重(kg)"
            android:inputType="number"
            android:padding="@dimen/dp_17"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColorHint="@color/edit_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>
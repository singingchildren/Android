<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_register_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/call" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/line"
            android:ems="10"
            android:hint="@string/input_number"
            android:inputType="number"
            android:textColorHint="#999999"
            android:maxLength="11"
            android:textSize="@dimen/sp_14"
            android:theme="@style/MyEditText"
            app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_phone"
            app:layout_constraintTop_toTopOf="@+id/iv_phone" />

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toStartOf="@+id/et_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone"
            app:srcCompat="@mipmap/verification" />

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="115dp"
            android:ems="10"
            android:background="@drawable/line"
            android:hint="@string/input_verification"
            android:inputType="number"
            android:maxLength="8"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14"
            android:theme="@style/MyEditText"
            app:layout_constraintBottom_toBottomOf="@+id/iv_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_password"
            app:layout_constraintTop_toTopOf="@+id/iv_password" />

        <TextView
            android:id="@+id/tv_verfication"
            android:layout_width="85dp"
            android:layout_height="43dp"
            android:background="@drawable/ver_rectangle"
            android:gravity="center"
            android:text="发送验证码"
            app:layout_constraintBottom_toBottomOf="@+id/et_verification"
            app:layout_constraintEnd_toEndOf="@+id/et_phone"
            app:layout_constraintStart_toEndOf="@+id/et_verification"
            app:layout_constraintTop_toTopOf="@+id/et_verification" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_verification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_password"
            android:src="@mipmap/lock" />

        <EditText
            android:id="@+id/et_passwords"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/line"
            android:ems="10"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:lastBaselineToBottomHeight="0.5dp"
            android:lineHeight="0.1dp"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14"
            android:theme="@style/MyEditText"
            app:layout_constraintBottom_toBottomOf="@+id/imageView32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView32"
            app:layout_constraintTop_toTopOf="@+id/imageView32" />

        <ImageView
            android:id="@+id/iv_look"
            android:layout_width="22dp"
            android:layout_height="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/et_passwords"
            app:layout_constraintEnd_toEndOf="@+id/et_passwords"
            app:layout_constraintTop_toTopOf="@+id/et_passwords"
            app:srcCompat="@mipmap/eyes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_register_fragment"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/commit"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white_255"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio" />

    <TextView
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/dp_50"
        android:text="@string/read"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_fragment"
        app:layout_constraintStart_toStartOf="@+id/cl_register_fragment"
        app:layout_constraintTop_toBottomOf="@+id/cl_register_fragment" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/radio"
        app:layout_constraintStart_toEndOf="@+id/radio"
        app:layout_constraintTop_toTopOf="@+id/radio" />

    <ImageView
        android:id="@+id/iv_cheak"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radio"
        app:layout_constraintEnd_toStartOf="@+id/radio"
        app:layout_constraintTop_toTopOf="@+id/radio"
        app:srcCompat="@drawable/aggree" />

</androidx.constraintlayout.widget.ConstraintLayout>
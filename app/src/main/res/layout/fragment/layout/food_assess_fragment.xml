<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.Ass_FoodFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_food_assess_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">


        <ImageView
            android:id="@+id/imageView46"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/asschi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout21"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/write_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView46">

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/assfood"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="今日饮食评估"
                android:textColor="#252525"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView47"
                app:layout_constraintStart_toEndOf="@+id/imageView47"
                app:layout_constraintTop_toTopOf="@+id/imageView47" />

            <ImageView
                android:id="@+id/iv_add_food_assess_fragment"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/assjia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tv1_num_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:text="345"
            android:textColor="@color/write"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv2_num_food"
            app:layout_constraintStart_toStartOf="@+id/imageView46" />

        <TextView
            android:id="@+id/tv2_num_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1035"
            android:textColor="@color/write"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView46"
            app:layout_constraintEnd_toEndOf="@+id/imageView46"
            app:layout_constraintStart_toStartOf="@+id/imageView46"
            app:layout_constraintTop_toTopOf="@+id/imageView46" />

        <TextView
            android:id="@+id/tv3_num_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:text="1388"
            android:textColor="@color/write"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv2_num_food"
            app:layout_constraintEnd_toEndOf="@+id/imageView46" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="21dp"
            android:text="摄入千卡"
            android:textColor="@color/write"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView46"
            app:layout_constraintStart_toStartOf="@+id/imageView46"
            app:layout_constraintTop_toBottomOf="@+id/tv1_num_food" />

        <TextView
            android:id="@+id/textView86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还可以吃/千卡"
            android:textColor="@color/write"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView46"
            app:layout_constraintStart_toStartOf="@+id/imageView46"
            app:layout_constraintTop_toTopOf="@+id/textView85" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:text="能量消耗"
            android:textColor="@color/write"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView46"
            app:layout_constraintTop_toTopOf="@+id/textView86" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/food_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:text="今日"
        android:textColor="@color/write"
        android:textSize="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.wangzijie.nutrition_user.utils.MyLineChart
        android:id="@+id/chart_food_assess_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_food_assess_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="startTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>
    <style name="rb_seek_activity_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/home_textcloor</item>
        <item name="android:textSize">@dimen/dp_17</item>
    </style>
    <style name="rb_mentality_test_act_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:button">@drawable/bg_rb_selector_mentality_test_act</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="news_text_style">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>

    <style name="news_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--colorControlNormal 为没有获取焦点时候下划线的颜色-->
    <!--colorControlActivated 为获取焦点时候光标与下划线的颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ff666666</item>
        <item name="colorControlActivated">#00C160</item>
    </style>

    <style name="mainRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36px</item>
        <item name="android:drawablePadding">19px</item>
        <item name="android:textColor">@color/main_bottom_tv_color</item>
    </style>


    <declare-styleable name="EnhanceTabLayout">
        <attr name="tab_Mode" format="enum">
            <enum name="mode_fixed" value="1"/>
            <enum name="mode_scrollable" value="2"/>
        </attr>
        <attr name="tabIndicatorColor" format="color"/>
        <attr name="tabSelectTextColor" format="color"/>
        <attr name="tabTextColor" format="color"/>
        <attr name="tabIndicatorHeight" format="dimension"/>
        <attr name="tabIndicatorWidth" format="dimension"/>
        <attr name="tabTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="powerful_recyc_lerView">
        <attr name="dividerColor" format="color"/>
        <attr name="dividerSize" format="dimension"/>
        <attr name="dividerDrawable" format="reference"/>
        <attr name="useStaggerLayout" format="boolean"/>
        <attr name="numColumns" format="integer"/>
        <attr name="rvOrientation" format="enum">
            <enum name="HORIZONTAL" value="0"/>
            <enum name="VERTICAL" value="1"/>
        </attr>
        <attr name="dividerMarginLeft" format="dimension"/>
        <attr name="dividerMarginRight" format="dimension"/>
    </declare-styleable>



    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">

                <item name="android:windowBackground">@color/white_255</item>
                <!--背景-->
                <item name="android:windowFrame">@null</item>
                <!--设置无边框-->
                <item name="android:windowNoTitle">true</item>
                <!-- 无标题 -->
                <item name="android:backgroundDimEnabled">true</item>
                <!-- 模糊 -->
                <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
                <!--显示软件盘-->

            </style>


    <style name="tv_mine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_49</item>
        <item name="android:background">@drawable/bg_text_mine</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="iv_mine">
        <item name="android:layout_width">@dimen/dp_9</item>
        <item name="android:layout_height">@dimen/dp_15</item>
        <item name="android:src">@drawable/icon_right</item>
        <item name="android:layout_marginTop">@dimen/dp_19</item>
        <item name="android:layout_marginRight">@dimen/dp_14</item>
        <item name="android:clickable">false</item>

    </style>

    <style name="btn_pay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/sp_18</item>
        <item name="android:paddingRight">@dimen/sp_18</item>
        <item name="android:textSize">@dimen/dp_11</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:background">@drawable/card_rectangle</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:textSize">@dimen/dp_11</item>
        <item name="android:button">@null</item>
    </style>




    <style name="tab_layout_style">
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <style name="item_style">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <declare-styleable name="chartView">
        <attr name="xylinecolor" />
        <attr name="xylinewidth" />
        <attr name="xytextcolor" />
        <attr name="xytextsize" />
        <attr name="linecolor" />
        <attr name="interval" />
        <attr name="bgcolor" />
        <attr name="isScroll" />
    </declare-styleable>

</resources>
